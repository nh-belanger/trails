<script src="//maps.google.com/maps/api/js?key=<%= ENV['MAPS_KEY'] %>"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

<div class="small-12 large-6 small-centered large-centered columns">
  <div class="title-box">
    <h1 class = 'title-text'> <%= @trail.name %> </h1>
  </div>
</div>


<div class="small-12 large-8 small-centered large-centered columns">
  <div class="map-box">
    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 250px;'></div>
    </div>
  </div>
</div>

<row>
  <div class="small-12 large-8 columns">
    <div class="show-box">
      <h4 class="custom-text"> Description </h4>
      <p class = "custom-text-body"> <%= @trail.description %> </p>
    </div>
  </div>

  <div class="small-12 large-4 columns">
    <div class="show-box">
      <h4 class="custom-text"> The Facts </h4>
      <p class = "custom-text-body"> <%= @trail.name %> </p>
      <p class = "custom-text-body"> <%= @trail.address %> </p>
      <p class = "custom-text-body"> <%= @trail.length %> </p>
      <p class = "custom-text-body"> <%= @trail.latitude %> </p>
      <p class = "custom-text-body"> <%= @trail.longitude %> </p>
    </div>
  </div>
</row>


<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({
    provider: {
      mapTypeId: google.maps.MapTypeId.TERRAIN,
      disableDefaultUI: true
    },
    internal: {
      id: 'map'
    }
  },
  function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
     handler.getMap().setZoom(15);
  });
</script>
