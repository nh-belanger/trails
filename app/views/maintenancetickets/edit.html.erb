<div class="small-12 large-6 small-centered large-centered columns">
  <div class="title-box">
    <h1 class = 'title-text'>Edit Maintenance Ticket</h1>
  </div>
</div>
<br>


<%= form_for ([@trail, @maintenanceticket]) do |f| %>
  <div class="row">
    <div class="column text-center small-12 large-6 small-centered large-centered">
      <%= f.text_field :location, :placeholder => "Location" %>
      <%= f.text_area :body, :placeholder => "Description", cols: 40, rows: 15 %>
      <%= f.hidden_field :trail_id, :value => @trail.id %>
      <div class="actions">
        <%= f.submit "Edit", :class => 'custom-button' %>
      </div>
      <div class="custom-button-small-alert">
        <%= link_to 'Delete', trail_maintenanceticket_path(@trail, @maintenanceticket), data: {:confirm => 'Are you sure?'}, :method => :delete %>
      </div>
    </div>
  </div>
<% end %>
